<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yumu.mapper.ex.MenuInfoMapperEx">
  <resultMap id="BaseResultMap" type="com.yumu.dto.MenuInfo">
    <id column="menu_id" jdbcType="VARCHAR" property="menuId" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="parent_id" jdbcType="VARCHAR" property="parentId" />
    <result column="level" jdbcType="INTEGER" property="level" />
    <result column="hide_flg" jdbcType="INTEGER" property="hideFlg" />
    <result column="delete_flg" jdbcType="INTEGER" property="deleteFlg" />
    <result column="create_user" jdbcType="VARCHAR" property="createUser" />
    <result column="create_datetime" jdbcType="TIMESTAMP" property="createDatetime" />
    <result column="update_user" jdbcType="VARCHAR" property="updateUser" />
    <result column="update_datetime" jdbcType="TIMESTAMP" property="updateDatetime" />
  </resultMap>
  
  <!-- 自定义方法  开始-->
  <resultMap id="qryMenuListMap" type="com.yumu.controller.login.resp.MenuResp">
    <id column="menu_id" jdbcType="VARCHAR" property="menuId" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="parent_id" jdbcType="VARCHAR" property="parentId" />
    <collection column="{parentId = menu_id}" javaType="java.util.ArrayList" ofType="com.yumu.controller.login.resp.MenuResp" property="child" select="qryMenuChildList" />
  </resultMap>
  <!-- 查询有权限菜单 -->
  <select id="qryMenuList" parameterType="java.lang.String" resultMap="qryMenuListMap">
    SELECT
	  mi.menu_id,
	  mi.title,
	  mi.url,
	  mi.parent_id
    FROM
	  user_info ui
	  INNER JOIN user_role ur ON ( ui.user_id = ur.user_id AND ur.delete_flg=0 )
	  INNER JOIN role_menu rm ON ( ur.role_id = rm.role_id AND rm.delete_flg=0 )
	  INNER JOIN menu_info mi ON ( rm.menu_id = mi.menu_id AND mi.delete_flg=0 AND mi.hide_flg=0) 
    WHERE
	  ui.status =0
	  AND mi.level=1
	  AND ui.user_id=#{userId,jdbcType=VARCHAR}
  </select>
  <!-- 查询有权限菜单-子菜单查询 -->
  <select id="qryMenuChildList" resultType="com.yumu.controller.login.resp.MenuResp">
    SELECT
	  mi.menu_id AS menuId,
	  mi.title AS title,
	  mi.url AS url,
	  mi.parent_id AS parentId
    FROM
	  menu_info mi
    WHERE
      mi.parent_id=#{parentId,jdbcType=VARCHAR}
	  AND mi.delete_flg =0
	  AND mi.level=2
  </select>

  <!-- 自定义方法  结束-->
</mapper>